rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMP: Allow all authenticated users to read all users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Bookings: allow users to create and read their own bookings, allow admin to read all
    match /bookings/{bookingId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid
        || exists(/databases/$(database)/documents/admin/$(request.auth.token.email.replace('.', '_')));
      allow update, delete: if false;
    }
    // Buses: allow all authenticated users to read and write (TEMP for dev)
    match /buses/{busId} {
      allow read, write: if request.auth != null;
      // Timings subcollection
      match /timings/{timingId} {
        allow read, write: if request.auth != null;
      }
    }
    // Allow authenticated users to read the admin collection
    match /admin/{docId} {
      allow read: if request.auth != null;
    }
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 